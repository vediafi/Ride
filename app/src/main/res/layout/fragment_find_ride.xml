<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.indagon.kimppakyyti.fragment.FindRideFragment"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" />


        <EditText
            android:id="@+id/start_location_search"
            fontPath="fonts/montserrat-black.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/start_location_hint"
            tools:layout_conversion_absoluteHeight="42dp"
            tools:layout_conversion_absoluteWidth="344dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/start_location_favourite"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/start_location_favourite"
            android:layout_width="32dp"
            android:layout_height="42dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:contentDescription="@string/favourites"
            android:src="@android:drawable/btn_star_big_off"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/start_location_search"
            tools:layout_conversion_absoluteHeight="42dp"
            tools:layout_conversion_absoluteWidth="32dp"
            tools:layout_conversion_absoluteX="352dp"
            tools:layout_conversion_absoluteY="16dp" />


        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:text="@string/to"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="384dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="75dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/start_location_search"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" />


        <EditText
            android:id="@+id/end_location_search"
            fontPath="fonts/montserrat-black.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/end_location_hint"
            tools:layout_conversion_absoluteHeight="42dp"
            tools:layout_conversion_absoluteWidth="344dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="91dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintRight_toLeftOf="@+id/end_location_favourite"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/end_location_favourite"
            android:layout_width="32dp"
            android:layout_height="42dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:contentDescription="@string/favourites"
            android:src="@android:drawable/btn_star_big_off"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/end_location_search"
            tools:layout_conversion_absoluteHeight="42dp"
            tools:layout_conversion_absoluteWidth="32dp"
            tools:layout_conversion_absoluteX="352dp"
            tools:layout_conversion_absoluteY="91dp" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:text="@string/when"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="384dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="150dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/end_location_search"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/passengers_joining"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateText"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="384dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="150dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="176dp"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/date_format"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="176dp"
            tools:layout_conversion_absoluteX="16dp"
            tools:layout_conversion_absoluteY="174dp"
            android:layout_marginStart="16dp" />


        <TextView
            android:id="@+id/timeText"
            android:layout_width="192dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:text="@string/time_format"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintBaseline_toBaselineOf="@+id/dateText"
            app:layout_constraintLeft_toRightOf="@+id/dateText"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="192dp"
            tools:layout_conversion_absoluteX="192dp"
            tools:layout_conversion_absoluteY="174dp"
            android:layout_marginStart="8dp" />


        <Button
            android:id="@+id/find_ride_button"
            fontPath="fonts/montserrat-black.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:singleLine="false"
            android:text="@string/find_ride"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="384dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="191dp"
            app:layout_constraintTop_toBottomOf="@+id/passenger_count" />

        <Spinner
            android:id="@+id/passenger_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>
